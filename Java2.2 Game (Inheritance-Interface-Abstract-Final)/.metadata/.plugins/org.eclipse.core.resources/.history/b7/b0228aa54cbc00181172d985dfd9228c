package application;

import java.util.Arrays;

public class Scores
{
	private double _mean = 0, _deviation = 0;
	
	// pass an array to it
	public void findMean ( Double[][] grades )
	{
		double scores = 0;
		int total = 0;

		for (int row = 0; row < grades.length; row++ )
		{
			for ( int col = 0; col < grades.length; col ++)
			{
				scores = grades[ row ][ col ] + scores;
				total++;				
			}

		}
		this.setMean ( scores / total);
		total = 0;
		System.out.printf( "The mean of the grades is: %.2f", getMean() );

	}
	
	public void findDeviation( Double[][] grades )
	{
		double scores = 0, scores1 = 0;
		int total = 0;

		for (int row = 0; row < grades.length; row++ )
		{
			for ( int col = 0; col < grades.length; col++ )
			{
				scores = grades[ row ][ col ] - this.getMean();
				scores1 = Math.pow( scores , 2);
				scores = scores1 + scores1; 
				total++;				
			}
		}
		this.setDeviation( Math.sqrt( scores / total ) );
		total = 0;
		System.out.printf ( "The Standard deviation of the students is: %.2f.\n", getDeviation() );

	}
	
	public void outputResult ( int choice)
	{
		
		System.out.printf ( "The Standard deviation of the students is: %.2f.\n", getDeviation() );
		System.out.println( "The mean of the grades is: " + getMean() );

	}
	
	public void sortingScores ( Double[][] student, String[] names )
	{
		try {
				Arrays.sort( student );
				
				for ( int row = 0; row < student.length; row++ ) // going too many spaces and giving me out of bounds.
				{
					System.out.println( "Student: " + names [ row ] );
					System.out.print ( "Grades:" );
					for ( int col = 0; col < student.length; col++ )
					{
						System.out.printf ( "\t%.1f  ", student[ row ][ col ] );
					}
						System.out.println ( "" );
				}
			} catch (ArrayIndexOutOfBoundsException error )
			{
				System.out.println (error );
			}
		catch ( NullPointerException error )
		{
			System.out.println (error );
		}	
	}

	public double getMean() {
		return _mean;
	}

	public void setMean(double _mean) {
		this._mean = _mean;
	}

	public double getDeviation() {
		return _deviation;
	}

	public void setDeviation(double _deviation) {
		this._deviation = _deviation;
	}
	
}
