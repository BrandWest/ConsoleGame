package application;

public class Point extends SpaceObject
{
	protected double _height;
	protected double _length;
	protected int _sides;
	
	public Point ()
	{
		
	}
	
	// constructor not needed, because draw method is "creating the stuffs"
//	public Point ( double height, double length, int sides)
//	{
//		_height = height;
//		_length = length;
//		_sides = sides;
//	}
//	
	@Override
	public void draw() 
	{
		_height = 4;
		_length = 3.3;
		_sides = 3;
	}

	@Override
	public void announce() 
	{
		System.out.println( "Height = " + _height + "Length = " + _length + "Number of sides: " + _sides );
	}

}
